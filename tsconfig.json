{
  "compilerOptions": {
      "target": "ES5",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "rootDirs": ["src", "tests"],
      "baseUrl": ".",
      "outDir": "dist",
      "paths": {
          "@/*": ["src/*"],
          "@/tests/*": ["tests/*"]
      },
      "allowJs": true,
      "strict": true,
      "resolveJsonModule": true,
      "downlevelIteration": true,
      "sourceMap": true,
      "declaration": true
  },
  "include": ["src", "tests"]
}